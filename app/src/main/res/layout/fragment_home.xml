<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:padding="10dp"
            android:elevation="4dp"
            android:background="@drawable/home_box_style"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/today_weather_place_pin"
                    android:background="@drawable/ic_place_black_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/today_weather_place_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/today_weather_place_text"
                    android:text=""
                    app:layout_constraintTop_toTopOf="@+id/today_weather_place_pin"
                    app:layout_constraintBottom_toBottomOf="@+id/today_weather_place_pin"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/today_weather_image"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:id="@+id/today_weather_description"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="불러오는중"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/today_weather_place_temp"
                android:textAlignment="center"
                android:textSize="40dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="4dp"
            android:background="@drawable/home_box_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_weather_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/layout_weather_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_day_1"
                    android:text=""
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/weather_image_1"
                    android:layout_gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/weather_min_1"
                        android:textSize="12dp"
                        android:textColor="#0000FF"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/weather_max_1"
                        android:textSize="12dp"
                        android:textColor="#FF0000"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_weather_2"
                app:layout_constraintRight_toLeftOf="@+id/layout_weather_3"
                app:layout_constraintLeft_toRightOf="@+id/layout_weather_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_day_2"
                    android:text=""
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/weather_image_2"
                    android:layout_gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/weather_min_2"
                        android:textSize="12dp"
                        android:textColor="#0000FF"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/weather_max_2"
                        android:textSize="12dp"
                        android:textColor="#FF0000"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_weather_3"
                app:layout_constraintRight_toLeftOf="@+id/layout_weather_4"
                app:layout_constraintLeft_toRightOf="@+id/layout_weather_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_day_3"
                    android:text=""
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/weather_image_3"
                    android:layout_gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/weather_min_3"
                        android:textSize="12dp"
                        android:textColor="#0000FF"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/weather_max_3"
                        android:textSize="12dp"
                        android:textColor="#FF0000"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_weather_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/layout_weather_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_day_4"
                    android:text=""
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/weather_image_4"
                    android:layout_gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/weather_min_4"
                        android:textSize="12dp"
                        android:textColor="#0000FF"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/weather_max_4"
                        android:textSize="12dp"
                        android:textColor="#FF0000"
                        android:layout_marginHorizontal="5dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/exchange_button"
            android:padding="20dp"
            android:overScrollMode="never"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="4dp"
            android:background="@drawable/home_box_style"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/exchange_country_flag"
                android:layout_gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/home_box_style"
                android:layout_width="64dp"
                android:layout_height="64dp"/>

            <TextView
                android:id="@+id/exchange_country_name"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="24dp"
                app:layout_constraintLeft_toRightOf="@+id/exchange_country_flag"
                app:layout_constraintTop_toTopOf="@+id/exchange_country_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/exchange_country_cost_info"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@+id/exchange_country_flag"
                app:layout_constraintBottom_toBottomOf="@+id/exchange_country_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/exchange_country_cost"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/exchange_placeholder"
                android:text="환율정보를 확인하려면 클릭하세요"
                android:textSize="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_home_plan"
            android:paddingVertical="20dp"
            android:overScrollMode="never"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="4dp"
            android:background="@drawable/home_box_style"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_home_plan_rcy"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_home_plan_group"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_home_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_home_plan_info"
                android:visibility="visible"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAlignment="center"
                android:nestedScrollingEnabled="false"
                android:text="주그룹이 없습니다"
                android:textSize="16dp"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>